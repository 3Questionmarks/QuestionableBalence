			<Where Type="GAMESPEED_EPIC"/>
			<Set SpyRatePercent="80" />
		</Update>
		<Update>
			<Where Type="GAMESPEED_STANDARD"/>
			<Set SpyRatePercent="70" />
		</Update>
		<!--Unchanged>
